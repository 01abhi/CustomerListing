{% extends "base.html.twig" %}

{% block body %}

<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Add new Customer</h3>
        
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.surname) }}
                    {{ form_widget(form.surname,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.email_address) }}
                    {{ form_widget(form.email_address,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.telephone_number) }}
                    {{ form_widget(form.telephone_number,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.customer_type) }}
                    {{ form_widget(form.customer_type,{'attr':{'class':'form-control'}})}}
                </div>

                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Submit</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>


{% endblock %}